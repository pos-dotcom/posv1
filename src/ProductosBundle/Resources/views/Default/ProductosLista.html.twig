                                    <th> Costo </th>
                                    <th> Precio Venta </th>
                                    <th> Unidades </th>
                                    <th> Docenas </th>
                                    <th> EL PALACIO </th>
                                    <th> MERCADO </th>
                                    <th> RUTEO </th>
                                    <th> Total </th>
                                    <th > Accion </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    {% for dato in datos %}

                                    <tr >
                                        <td >
                                            {{ dato.codigoArticulo}}  

                                        </td>
                                        <td >
                                            {{dato.nombre}}
                                        </td>
                                        <td >

                                            {{dato.precioCosto|number_format(2,'.',',')}}
                                        </td>
                                        <td >
                                            {{dato.precioVenta|number_format(2,'.',',')}}
                                        </td>
                                        <td >
                                            {{dato.existencia}}
                                        </td>

                                        <td >
                                            {{dato.docena}}
                                        </td>
                                        <td >
                                            0
                                        </td>
                                        <td >
                                            0
                                        </td>
                                        <td >
                                            0
                                        </td>
                                        <td >
                                            {{dato.precioVenta * dato.existencia |number_format(2,'.',',')}}
                                        </td>
                                        <td>
                                            <a class="btn btn-primary btn-mini" data-toggle="modal" data-target="#myModal" title="Ver Detalle"><i class="fa fa-search"></i>  </a>
                                            <a title="Click para borrar el producto" id="" class="delbutton" ><i class="icon-trash"></i></a>
                                            <a class="btn btn-success btn-mini" data-toggle="modal" data-target="#myModal" title="Mas informacion" ><i class="fa fa-info"></i></a>

                                        </td>

                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
