                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                           <!-- <h3 class="box-title">Data Table With Full Features</h3>-->
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="tblPpal" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th> Codigo Art√≠culo</th>
                                    <!--<th width="14%"> Categoria  </th> -->
                                    <th> Nombre </th>
