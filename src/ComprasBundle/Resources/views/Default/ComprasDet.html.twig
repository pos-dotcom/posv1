{%extends '::frontendCompras.html.twig'%}

{% block body %}
   
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Compras
            </h1>
            <!--<ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Tables</a></li>
                <li class="active">Data tables</li>
            </ol>-->
            <br>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <!-- <h3 class="box-title">Data Table With Full Features</h3>-->
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="tblPpal" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th colspan="2"><center>Detalle de Factura</center></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <b>Num Facturas: </b>  {{CompraEnc[0].numFactura}}
                                        </td>
                                        <td>
                                            <b>Fecha Compra: </b>   {{CompraEnc[0].fechaCompra|date('d/m/Y')}}  
                                        </td>
                                    </tr>
                                    <tr>    
                                        <td>
                                            <b>Proveedor: </b>  {{CompraEnc[0].proveedor.nombreProveedor}}
                                        </td>
                                        <td>
                                            <b>Observaci√≥n: </b>   {{CompraEnc[0].observacion}} 
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                            <b>Total: </b>    {{CompraEnc[0].total|number_format(2,'.',',')}} 
                                        </td>
                                    </tr>    
                                  
                                </tbody>
                            </table>
                           <br>
                             <a title="Agregar Producto" href="{{path('addproductocompra',{'codigoCompraEnc': CompraEnc[0].codigoCompraEnc})}}" class="btn btn-primary btn-mini" data-toggle="modal" data-target="#myModal" ><i class="fa fa-fw fa-plus"></i></a>
                             <br><br>
                            <table  class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th> Cod. Producto </th>
                                        <th> Nombre </th>
                                        <th> Cantidad </th>
                                        <th> Docena </th>
                                        <th> Costo </th>
                                        <th> Accion </th>
                                    </tr>
                                </thead>
                               <tbody>

                                    {% for dato in CompraDet %}
                                        <tr>
                                            <td>
                                                {{dato.producto.codigoArticulo}}
                                            </td>

                                            <td>

                                                {{dato.producto.nombre}}
                                            </td>

                                            <td>
                                                {{dato.cantidad}}
                                            </td>

                                            <td>

                                                {% if dato.bDocena == true %}
                                                    <input type="checkbox" checked disabled style="width: 20px; height:20px;padding-top: 6px; padding-bottom: 6px;alignment-baseline: middle" >
                                                {% else %}
                                                    <input type="checkbox" disabled style="width: 20px; height:20px;padding-top: 6px; padding-bottom: 6px;alignment-baseline: middle" >
                                                {% endif %}
                                            </td>

                                            <td >
                                                {{dato.cantidad * dato.costo |number_format(2,'.',',')}} 
                                            </td>
                                            <td>
                                                 <a href=""  class="btn btn-danger btn-mini" data-toggle="modal" data-target="#myModal" title="Borrar"><i class="fa fa-trash"></i></a>
                                            </td>

                                        </tr>    

                                    {% endfor %}
                                </tbody>
                            </table>    
                        </div>
                                
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

            </div>
        </div>
    </div>
    <footer class="main-footer">

    </footer>
    <div class="control-sidebar-bg"></div>

{% endblock body%}




